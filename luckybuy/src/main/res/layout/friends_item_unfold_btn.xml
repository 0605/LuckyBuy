<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@android:color/white"
    android:id="@+id/unfold_btn_ll">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="@dimen/gap_9_s"
        android:paddingBottom="@dimen/gap_9_s">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/friends_unfold"
        android:id="@+id/textView7"
        android:textColor="@color/text_6_c"
        android:textSize="@dimen/text_12_s"
        android:layout_marginRight="@dimen/gap_3_s" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView10"
        android:src="@mipmap/friends_expand_icon" />
    </LinearLayout>

</LinearLayout>