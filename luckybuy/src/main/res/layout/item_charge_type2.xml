<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:id="@+id/charge_type_rl"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_vertical">

<ImageView
    android:layout_width="wrap_content"
    android:layout_height="@dimen/field_height_primary_s"
    android:id="@+id/charge_icon"
    android:layout_centerVertical="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:src="@mipmap/paytype_icon"
    android:layout_marginRight="@dimen/gap_10_s"
    android:layout_marginLeft="@dimen/gap_15_s"
    android:paddingTop="@dimen/gap_8_s"
    android:paddingBottom="@dimen/gap_8_s" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/paypal"
    android:layout_centerVertical="true"
    android:layout_toRightOf="@+id/charge_icon"
    android:layout_toEndOf="@+id/charge_icon"
    android:textColor="@color/text_3_c"
    android:textSize="@dimen/text_13_s"
    android:id="@+id/charge_type_tv" />

    <View
    android:layout_width="match_parent"
    android:layout_height="@dimen/divider_h_s"
    android:background="@color/divider_c"
    android:layout_alignParentBottom="false"
        android:id="@+id/charge_divider_v"
    android:layout_alignBottom="@+id/charge_icon"
        android:layout_alignLeft="@+id/charge_icon" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView46"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@mipmap/enter_arrow_icon_2x"
        android:padding="@dimen/gap_15_s" />

    <ImageView
        android:layout_width="@dimen/view_49_s"
        android:layout_height="@dimen/gap_13_s"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/charge_type_tv"
        android:layout_toEndOf="@+id/charge_type_tv"
        android:id="@+id/privilege_iv"
        android:layout_marginLeft="@dimen/gap_7_s" />
</RelativeLayout>