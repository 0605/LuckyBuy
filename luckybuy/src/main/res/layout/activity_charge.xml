<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:layout_alignParentTop="true">

        <include
            android:layout_width="match_parent"
            android:layout_height="@dimen/actionbar_height_s"
            layout="@layout/actionbar_base" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/field_height_primary_s"
            android:text="@string/charge_money_title"
            android:id="@+id/textView63"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_15_s"
            android:textColor="@color/text_3_c"
            android:paddingLeft="@dimen/gap_15_s"
            android:paddingRight="@dimen/gap_15_s"
            android:visibility="gone" />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_h_s"
            android:background="@color/divider_c"
            android:layout_marginLeft="@dimen/gap_15_s"
            android:visibility="gone" />

        <GridView
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_111_s"
            android:id="@+id/charge_money_gv"
            android:layout_gravity="center_horizontal"
            android:numColumns="3"
            android:paddingTop="@dimen/gap_18_s"
            android:paddingBottom="@dimen/gap_18_s"
            android:verticalSpacing="@dimen/gap_18_s"
            android:horizontalSpacing="@dimen/gap_19_s"
            android:paddingLeft="@dimen/gap_15_s"
            android:paddingRight="@dimen/gap_15_s"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/gap_10_s"
            android:background="@color/ground_c"
            android:visibility="gone" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/field_height_primary_s"
            android:text="@string/charge_method"
            android:id="@+id/textView15"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_15_s"
            android:textColor="@color/text_3_c"
            android:paddingLeft="@dimen/gap_15_s"
            android:paddingRight="@dimen/gap_15_s"
            android:background="@color/ground_c" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_h_s"
            android:background="@color/divider_c"
            android:layout_marginLeft="@dimen/gap_15_s" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/charge_type_lv"
            android:background="@android:color/white"
            android:dividerHeight="0dp"
            android:divider="@color/background_transparent" />
    </LinearLayout>

<!--    <include
        android:layout_width="match_parent"
        android:layout_height="@dimen/field_height_primary_s"
        layout="@layout/payment_bottom"
        android:layout_alignParentBottom="true"
        android:id="@+id/payment_bottom_rl" />-->
</RelativeLayout>