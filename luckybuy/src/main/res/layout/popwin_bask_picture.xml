<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/gap_10_s">

    <LinearLayout
        android:id="@+id/pop_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white">

            <Button
                android:id="@+id/takePhotoBtn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/field_height_primary_s"
                android:padding="10dp"
                android:text="@string/photograph"
                android:textColor="@color/text_3_c"
                android:textSize="@dimen/text_16_s"
                android:textStyle="bold"
                android:background="@null" />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_h_s"
                android:background="@color/divider_c"/>
            <Button
                android:id="@+id/pickPhotoBtn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/field_height_primary_s"
                android:background="@null"
                android:padding="10dp"
                android:text="@string/album"
                android:textColor="@color/text_3_c"
                android:textSize="@dimen/text_16_s"
                android:textStyle="bold" />

        </LinearLayout>

        <Button
            android:id="@+id/cancelBtn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/field_height_primary_s"
            android:layout_marginTop="@dimen/gap_10_s"
            android:background="@android:color/white"
            android:text="@string/cancel"
            android:textColor="@color/light_red"
            android:textSize="@dimen/text_16_s"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>