<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ground_c">

    <include
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar_height_s"
        layout="@layout/actionbar_base"
        android:layout_gravity="center_horizontal"
        android:id="@+id/actionbar_setting" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:paddingLeft="@dimen/gap_15_s"
        android:paddingRight="@dimen/gap_15_s"
        android:layout_below="@+id/actionbar_setting"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout5">



            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/field_height_primary_s"
                android:gravity="left|center_vertical"
                android:textColor="@color/text_3_c"
                android:textSize="@dimen/text_14_s"
                android:background="@null"
                android:textColorHint="@color/hint_c"
                android:hint="@string/address_hint_name"
                android:singleLine="true"
                android:ellipsize="end"
                android:inputType="text"
                android:id="@+id/address_edit_name" />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_h_s"
            android:background="@color/divider_c" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/field_height_primary_s"
                android:gravity="left|center_vertical"
                android:textColor="@color/text_3_c"
                android:textSize="@dimen/text_14_s"
                android:background="@null"
                android:textColorHint="@color/hint_c"
                android:hint="@string/address_hint_phone"
                android:singleLine="true"
                android:ellipsize="end"
                android:inputType="phone"
                android:id="@+id/address_edit_phone" />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_h_s"
            android:background="@color/divider_c" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/field_height_primary_s"
            android:layout_gravity="center_horizontal"
            android:id="@+id/address_province_rl">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textColor="@color/text_3_c"
                android:textSize="@dimen/text_14_s"
                android:background="@null"
                android:textColorHint="@color/hint_c"
                android:hint="@string/address_hint_district"
                android:ellipsize="end"
                android:enabled="false"
                android:id="@+id/address_edit_province_tv"
                android:singleLine="true"
                android:focusable="false" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:src="@mipmap/enter_arrow_icon_2x" />

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_h_s"
            android:background="@color/divider_c" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/field_height_primary_s"
            android:layout_gravity="center_horizontal"
            android:id="@+id/address_street_rl">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textColor="@color/text_3_c"
                android:textSize="@dimen/text_14_s"
                android:background="@null"
                android:textColorHint="@color/hint_c"
                android:hint="@string/address_hint_street"
                android:ellipsize="end"
                android:enabled="false"
                android:id="@+id/address_edit_street_tv"
                android:singleLine="true"
                android:focusable="false" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView23"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:src="@mipmap/enter_arrow_icon_2x" />
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_h_s"
            android:background="@color/divider_c" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_75_s"
                android:paddingTop="@dimen/gap_12_s"
                android:textColor="@color/text_3_c"
                android:textSize="@dimen/text_14_s"
                android:background="@null"
                android:lines="3"
                android:textColorHint="@color/hint_c"
                android:hint="@string/address_hint_detail"
                android:gravity="top"
                android:maxLines="3"
                android:ellipsize="end"
                android:ems="150"
                android:id="@+id/address_edit_detail_info" />
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/field_height_primary_s"
        android:text="@string/finish"
        android:id="@+id/finish_btn"
        android:layout_below="@+id/linearLayout5"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background_button"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_16_s"
        android:layout_marginLeft="@dimen/gap_15_s"
        android:layout_marginRight="@dimen/gap_15_s"
        android:layout_marginTop="@dimen/gap_20_s" />

</RelativeLayout>