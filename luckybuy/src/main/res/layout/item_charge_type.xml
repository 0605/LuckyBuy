<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:id="@+id/charge_type_rl"
    android:descendantFocusability="blocksDescendants">

<ImageView
    android:layout_width="wrap_content"
    android:layout_height="@dimen/field_height_primary_s"
    android:id="@+id/charge_icon"
    android:layout_centerVertical="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:src="@mipmap/paytype_icon"
    android:layout_marginRight="@dimen/gap_10_s"
    android:layout_marginLeft="@dimen/gap_15_s"
    android:paddingTop="@dimen/gap_8_s"
    android:paddingBottom="@dimen/gap_8_s" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/paypal"
    android:layout_centerVertical="true"
    android:layout_toRightOf="@+id/charge_icon"
    android:layout_toEndOf="@+id/charge_icon"
    android:textColor="@color/text_3_c"
    android:textSize="@dimen/text_13_s"
    android:id="@+id/charge_type_tv" />

<CheckBox
    android:layout_width="@dimen/gap_18_s"
    android:layout_height="@dimen/gap_18_s"
    android:layout_centerVertical="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:checked="false"
    android:background="@drawable/background_cart_checkbox"
    android:button="@null"
    android:layout_marginRight="@dimen/gap_15_s"
    android:id="@+id/charge_cb"
    android:clickable="false" />
<View
    android:layout_width="match_parent"
    android:layout_height="@dimen/divider_h_s"
    android:background="@color/divider_c"
    android:layout_alignParentBottom="true"
    android:layout_toRightOf="@+id/charge_icon"
    android:id="@+id/charge_divider_v" />
</RelativeLayout>