<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:id="@+id/payment_diamond_ll">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar_height_s"
        android:paddingRight="@dimen/gap_15_s"
        android:paddingLeft="@dimen/gap_15_s">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/not_available_diamond"
            android:id="@+id/payment_available_diamond_tv"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="@dimen/text_14_s"
            android:textColor="@color/text_3_c" />

        <Switch
            android:layout_width="@dimen/gap_48_dp"
            android:layout_height="@dimen/view_29_s"
            android:id="@+id/payment_switch"
            android:checked="true"
            android:background="@drawable/background_selector_switch"
            android:thumb="@null"
            android:track="@null"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_h_s"
        android:background="@color/divider_c"
        android:layout_marginLeft="@dimen/gap_15_s" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/field_height_primary_s"
        android:paddingRight="@dimen/gap_15_s"
        android:id="@+id/payment_get_diamond_rl">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView26"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:src="@mipmap/enter_arrow_icon_2x" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/payment_diamond_tip"
            android:id="@+id/textView31"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/imageView26"
            android:layout_toStartOf="@+id/imageView26"
            android:paddingLeft="@dimen/gap_5_s"
            android:paddingRight="@dimen/gap_10_s"
            android:textSize="@dimen/text_12_s"
            android:textColor="@color/text_9_c" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView42"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/textView31"
            android:layout_toStartOf="@+id/textView31"
            android:src="@mipmap/tishidian_icon" />
    </RelativeLayout>

</LinearLayout>